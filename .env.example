# LucidLink Credentials (Required)
LUCIDLINK_FILESPACE=your-filespace.domain
LUCIDLINK_USER=your-username
LUCIDLINK_PASSWORD=your-password

# Sync Configuration (Optional)
# Direction: local-to-filespace, filespace-to-local, bidirectional
SYNC_DIRECTION=local-to-filespace

# Interval in seconds (0 or "once" for single run)
SYNC_INTERVAL=300

# Number of parallel rsync jobs
PARALLEL_JOBS=4

# Rsync options
RSYNC_OPTIONS=-avz --progress

# Comma-separated exclude patterns
SYNC_EXCLUDE=.DS_Store,Thumbs.db,*.tmp,*.log

# Web UI Configuration (Optional)
# Enable/disable the web management interface
WEBUI_ENABLED=true

# Web UI port (default: 8080)
WEBUI_PORT=8080
